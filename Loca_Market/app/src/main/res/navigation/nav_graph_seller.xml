<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_seller"
    app:startDestination="@id/storeFragment">

    <fragment
        android:id="@+id/storeFragment"
        android:name="com.example.loca_market.ui.StoreFragment"
        android:label="fragment_store"
        tools:layout="@layout/fragment_store" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.loca_market.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/profilFragment"
        android:name="com.example.loca_market.ui.ProfilFragment"
        android:label="fragment_profil"
        tools:layout="@layout/fragment_profil" />
    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.example.loca_market.ui.OrdersFragment"
        android:label="fragment_orders"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.example.loca_market.ui.addProduct.AddProductFragment"
        android:label="fragment_add_product"
        tools:layout="@layout/fragment_add_product" >
        <action
            android:id="@+id/action_addProductFragment_to_manageFragment"
            app:destination="@id/manageFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateProductFragment"
        android:name="com.example.loca_market.ui.UpdateProductFragment"
        android:label="fragment_update_product"
        tools:layout="@layout/fragment_update_product" />
    <fragment
        android:id="@+id/deleteProductFragment"
        android:name="com.example.loca_market.ui.DeleteProductFragment"
        android:label="fragment_delete_product"
        tools:layout="@layout/fragment_delete_product" />
    <fragment
        android:id="@+id/manageFragment"
        android:name="com.example.loca_market.ui.ManageFragment"
        android:label="fragment_manage"
        tools:layout="@layout/fragment_manage" >
        <action
            android:id="@+id/action_manageFragment_to_deleteProductFragment"
            app:destination="@id/deleteProductFragment" />
        <action
            android:id="@+id/action_manageFragment_to_addProductFragment"
            app:destination="@id/addProductFragment" />
        <action
            android:id="@+id/action_manageFragment_to_updateProductFragment"
            app:destination="@id/updateProductFragment" />
    </fragment>
</navigation>