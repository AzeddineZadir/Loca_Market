<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.client.Activities.DetailOrderActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/order_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_detail_toolbar">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/t_order_detail_date"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="date"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/t_order_detail_state"
                android:layout_width="200dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="state"/>
            <TextView
                android:id="@+id/t_order_detail_totalAmount"
                android:layout_width="200dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="totalAmount"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/t_order_detail_receiver_lastname"
                android:layout_width="200dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="receiver lastname"/>
            <TextView
                android:id="@+id/t_order_detail_receiver_firstname"
                android:layout_width="200dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="receiver firstname"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/t_order_detail_receiver_address"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="receiver address"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/t_order_detail_receiver_phone"
                android:layout_width="200dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="receiver phone"/>
            <TextView
                android:id="@+id/t_order_detail_receiver_city"
                android:layout_width="200dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="receiver city"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/t_order_detail_productsOrdred"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:text="Produits CommandÃ©s :"/>
        </TableRow>
    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_detail_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>