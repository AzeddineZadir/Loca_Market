<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.client.fragments.PersonnalInformationsFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_name_personal_information" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom"
                        android:textColor="@color/gray_800"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        />
                    <EditText
                        android:id="@+id/et_lastName_personnalInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Dupon"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_lastname_personal_information" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prénom"
                        android:textColor="@color/gray_800"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        />
                    <EditText
                        android:id="@+id/et_firstName_personnalInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Jean"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/desc_ic_email"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_email_personal_information" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_email"
                        android:textColor="@color/gray_800"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        />
                    <EditText
                        android:id="@+id/et_email_personnalInformation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="janedo123@gmail.com"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/desc_ic_username"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_username" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom d'utilisateur"
                        android:textColor="@color/gray_800"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp" />
                    <EditText
                        android:id="@+id/et_username_personal_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="janedo123"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/desc_ic_password"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_phone_personal_information" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Téléphone"
                        android:textColor="@color/gray_800"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        />
                    <EditText
                        android:id="@+id/ed_tel_personal_information"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="07589632145" />
                </LinearLayout>
             </LinearLayout>
        </LinearLayout>
</FrameLayout>